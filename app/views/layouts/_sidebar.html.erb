<div class="profile">
  <% if current_user.id == user.id %>
    <div class="row justify-content-center">
      <div class="col-lg-3">
        <div class="user_image">
          <%= attachment_image_tag current_user, :image, :fill, 250, 250, :size => "250x250", fallback: "no-user-image.jpg" %>
        </div>
      </div>
      <div class="col-lg-5">
        <h5 class="user_name">ユーザー名 &nbsp <u><%= current_user.name %></u></h5><br>
        <h5 class="user_information"><%= current_user.address %>／<%= current_user.age %>代／<%= current_user.sex %></h5><br>
        <h5>自己紹介</h5>
        <div class="card">
          <div class="card-body">
            <%= current_user.introduction %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-primary" %><br>
      </div>
    </div>
  <!-- 他ユーザー -->
  <% else %>
    <div class="row justify-content-center">
      <div class="col-lg-3">
        <div class="user_image">
          <%= attachment_image_tag user, :image, :fill, 250, 250, :size => "250x250", fallback: "no-user-image.jpg" %>
        </div>
      </div>
      <div class="col-lg-5">
        <h5 class="user_name">ユーザー名 &nbsp <u><%= user.name %></u></h5><br>
        <h5 class="user_information"><%= user.address %>／<%= user.age %>代／<%= user.sex %></h5><br>
        <h5>自己紹介</h5>
        <div class="card">
          <div class="card-body">
            <%= user.introduction %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
      </div>
    </div>
  <% end %>
</div>
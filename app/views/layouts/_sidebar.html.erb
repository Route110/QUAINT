<div class="profile">
  <% if current_user.id == user.id %>
    <div class="user_image">
      <%= attachment_image_tag current_user, :image, :fill, 200, 200, :size => "100x100", fallback: "no-user-image.jpg" %>
    </div><br>
    <h5 class="user_name">Name &nbsp <u><%= current_user.name %></u></h5><br>
    <h5>Introduction</h5>
    <div class="card">
      <div class="card-body">
        <%= current_user.introduction %>
      </div>
    </div><br>
    <%= link_to "ユーザー編集", edit_user_path(current_user.id), class: "btn btn-info" %><br>
    <!-- 他ユーザー -->
   <% else %>
    <div class="user_image">
     <%= attachment_image_tag user, :image, :fill, 200, 200, :size => "100x100", fallback: "no-user-image.jpg" %>
    </div><br>
    <h5 class="user_name">Name &nbsp <u><%= user.name %></u></h5>
    <br>
    <h5>Introduction</h5>
    <div class="card">
      <div class="card-body">
        <%= user.introduction %>
      </div>
    </div><br>
  <% end %>
</div>
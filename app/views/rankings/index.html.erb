<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-4">
		<h4>総合ランキング Top10</h4>
			<table class="table">
			<% @ranking.first(10).each_with_index do |ranking, i| %>
				<tr>
					<td><%= i+1 %>位</td>
					<td><%= ranking.hobby.name %></td>
					<td><%= link_to hobby_show_path(ranking.hobby.id) do %>
						<p class= "ranking-product-image"><%= attachment_image_tag ranking.hobby, :image, :fill, 200, 200, :size => "100x100", format: 'jpeg', fallback: "no-category-image.jpg" %></p>
						<% end %></td>
				</tr>
			<% end %>
			</table>
		</div>

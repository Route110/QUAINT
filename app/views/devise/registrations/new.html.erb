<main class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="row">
    <div class="col"></div>
    <div class="col-md-10">

      <h2><%= t('.sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :age %><br />
          <%= f.select :age, [["20歳未満", "10"], ["20代", "20"],["30代", "30"], ["40代", "40"],["50代", "50"], ["60代", "60"],["70代", "70"], ["80代", "80"],["90歳以上", "90"]],:prompt => "選択" %>
        </div>

        <div class="field">
          <%= f.label :sex %><br />
          <%= f.select :sex, [["男性", "男性"], ["女性", "女性"]],:prompt => "選択" %>
        </div>

        <div class="field">
          <%= f.label :job %><br />
          <%= f.select :job, [["公務員", "公務員"], ["経営者・役員", "経営者・役員"],["会社員", "会社員"], ["自営業", "自営業"],["自由業", "自由業"], ["専業主婦", "専業主婦"],["パート・アルバイト", "パート・アルバイト"], ["学生", "学生"],["その他", "その他"]],:prompt => "選択" %>
        </div>

        <div class="field">
          <%= f.label :address %><br />
          <%= f.select :address, [["北海道", "北海道"], ["東北", "東北"],["関東", "関東"], ["中部", "中部"],["近畿", "近畿"], ["中国", "中国"],["四国", "四国"], ["九州", "九州"]],:prompt => "選択" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
<br>
<br>
<br>
<br>
<br>
</main>
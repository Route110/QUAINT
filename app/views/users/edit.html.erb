<main class="container">
  <br>
  <div class="row my-lg-3">
    <div class="col-md"></div>
    <div class="col-md-10">
      <h1>User edit</h1>
      <!-- Form section -->
      <%= form_for(@user) do |f| %>
        <%= render "layouts/error_messages", model: f.object %>
        <div class="form-group">
          <%= f.label :postalcode %><br>
          <%= f.text_field :postalcode %>
        </div>
        <div class="form-group">
          <%= f.label :address %><br>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <%= f.label :age %><br>
          <%= f.number_field :age %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">   
          <%= attachment_image_tag @user, :image, :fill, 100, 100, format: "jpg", :size => "100x100", fallback: "no-user-image.jpg" %>
          <%= f.label :image %><br>
          <%= f.attachment_field :image, placeholder: "profile_image" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-action">
          <%= f.submit "Update Profile", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md"></div>
  </div>
  <br>
  <br>
</main>
<main>
<div class="container">
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>
</div>
<div class="container">
      <div class="row justify-content-center">
      	<div class="col-lg-3">
          	<div class="hobby_image">
          		<%= attachment_image_tag @hobby, :image, :fill, 250, 250, :size => "250x250", fallback: "no-category-image.jpg" %>
          	</div>
        	</div>
        	<div class="col-lg-4">
        		<h5 class="category_name">カテゴリー &nbsp <u><%= @hobby.category.category %></u></h5><br>
        		<h5 class="hobby_name">趣味名 &nbsp <u><%= @hobby.name %></u></h5><br>
          	<h5>紹介文</h5>
          	<div class="card">
            		<div class="card-body">
              		<%= @hobby.introduction %>
            		</div>
          	</div>
        	</div>
          <div class="col-lg-2">
            <%= link_to "趣味に追加する", hobby_add_path(@hobby), method: :post, class: "btn btn-primary" %>
          </div>
          <div class="col-lg-2">
            <%= link_to "チャレンジ一覧", community_index_path, class: "btn btn-primary" %>
          </div>
      </div>
      <br>
      <br>
      <div class="row justify-content-center">
      	<div class="col-lg-5">
          <h3>始めるにあたり</h3>
        </div>
        <div class="col-lg-5">
          <h3><%= @hobby.name %>の始め方</h3>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <br>
          <h5>必要アイテム: <%= @hobby.first_step.item %></h5>
          <br>
          <h5>費用目安: ¥ <%= @hobby.first_step.cost %></h5>
      	</div>
        <div class="col-lg-5">
          <br>
            <h5><%= @hobby.first_step.introduction %></h5>
        </div>
      </div>
  </div>
<br>
<br>
<br>
<br>
<br>
</main>
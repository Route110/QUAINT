<div class="container">
    <div class="row justify-content-center">
    	<div class="col-lg-12">
	      	<h3 class="black_band">カテゴリー別</h3>
	    </div>
    </div>
	<br>
	<div class="row">
		<% @categories.each do |category| %>
		<div class="col-lg-3">
		  	<div class="picture">
		 	  	<%= link_to category_show_path(category.id) do %>
		    	<img><%= attachment_image_tag category, :image, :fill, 200, 200, :size => "250x250", fallback: "no-category-image.jpg" %></img>
		    	<p>&nbsp<%= category.category %>&nbsp</p>
		    	<% end %>
			</div>
			<br>
			<br>
			<br>
		</div>
		<% end %>
	</div>
</div>
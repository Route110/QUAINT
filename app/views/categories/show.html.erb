<div class="container">
    <div class="row justify-content-center">
		<div class="col-lg-12">
	      	<h3 class="black_band">カテゴリー：<%= @category.category %></h3>
    	</div>
    </div>
    <div class="row justify-content-center">
    	<div class="col-lg-12">
	    	<table class="table">
				<thead>
			        <tr>
			          	<th>イメージ</th>
			          	<th>趣味名</th>
			          	<th>紹介文</th>
			          	<th></th>
			        </tr>
			    </thead>
			   	<% @hobbies.each do |hobby| %>
			    <tbody>
			        <tr>
			          	<td><%= attachment_image_tag hobby, :image, :fill, 200, 200, :size => "100x100", fallback: "no-category-image.jpg" %></td>
			          	<td><%= hobby.name %></td>
			          	<td><%= hobby.introduction %></td>
			          	<td><%= link_to "詳細", hobby_show_path(hobby.id), class: "btn btn-primary" %></td>
			        </tr>
			    </tbody>
			    <% end %>
			</table>
		</div>
  	</div>
</div>